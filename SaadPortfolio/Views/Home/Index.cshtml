    <!-- Section Contact -->
    <section id="contact" class="container my-5" data-aos="fade-up">
        <h2 class="section-title">Contact</h2>
        <form method="post" action="@Url.Action("SendMessage", "Message")">
            <div class="mb-3">
                <label for="name" class="form-label">Nom</label>
                <input type="text" class="form-control" id="name" name="Name" placeholder="Entrez votre nom" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Entrez votre email" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="Content" rows="4" placeholder="Votre message" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary d-block mx-auto">Envoyer</button>
        </form>
    </section>

